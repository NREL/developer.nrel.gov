<div class="container">
  <header>
    <map name="header_map">
      <% if(current_page.url != "/") %>
        <area shape="rect" coords="0,0,840,58" href="/" alt="Developer Network" />
      <% end %>
      <area shape="rect" coords="840,0,1000,58" href="http://www.nrel.gov/" alt="NREL" />
    </map>
    <%= image_tag("nrel/header.png", :alt => "NREL Developer Network", :usemap => "#header_map", :width => "1000", :height => "58") %>
  </header>
  <nav class="navbar navbar-expand-md navbar-dark bg-primary">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav">
        <li class="nav-item nav-home <%= "active" if(current_page.url == "/") %>"><a href="/" class="nav-link">Home</a></li>
        <li class="nav-item nav-documentation <%= "active" if(current_page.url =~ %r{/docs($|/)}) %>"><a href="/docs" class="nav-link">Documentation</a></li>
        <li class="nav-item nav-community <%= "active" if(current_page.url =~ %r{/community($|/)}) %>"><a href="/community" class="nav-link">Community</a></li>
      </ul>
    </div>
  </nav>

  <%= partial("layouts/breadcrumbs") %>
